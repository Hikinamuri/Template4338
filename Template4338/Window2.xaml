<Window x:Class="Template4338.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Window" Height="1080" Width="1920">
    <Grid>
        

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="ФИО:"/>
            <TextBox x:Name="fioTextBox"/>

            <TextBlock Text="Код клиента:"/>
            <TextBox x:Name="codeTextBox"/>

            <TextBlock Text="Дата рождения:"/>
            <DatePicker x:Name="birthdateDatePicker"/>

            <TextBlock Text="Индекс:"/>
            <TextBox x:Name="indexTextBox"/>

            <TextBlock Text="Город:"/>
            <TextBox x:Name="cityTextBox"/>

            <TextBlock Text="Улица:"/>
            <TextBox x:Name="streetTextBox"/>

            <TextBlock Text="Дом:"/>
            <TextBox x:Name="houseTextBox"/>

            <TextBlock Text="Квартира:"/>
            <TextBox x:Name="apartmentTextBox"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="emailTextBox"/>

            

        </StackPanel>

        <DataGrid Width="1000" x:Name="dataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>


    </Grid>
</Window>
